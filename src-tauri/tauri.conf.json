{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "time-wise",
  "version": "0.1.0",
  "identifier": "com.9renpoto.time-wise",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "trunk build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "time-wise",
        "width": 440,
        "height": 520,
        "minWidth": 440,
        "minHeight": 520,
        "visible": false,
        "decorations": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
